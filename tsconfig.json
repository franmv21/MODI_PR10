{
    "exclude": [
      "./tests",
      "./node_modules",
      "./dist"
    ],
    "compilerOptions": {
      "target": "es2022",
      "module": "node16",
      "moduleResolution": "NodeNext",
      "declaration": true,
      "rootDir": "./src",
      "outDir": "./dist",
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noImplicitReturns": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    }
}